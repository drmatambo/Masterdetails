@model CityView

<div class="col">
    <div class="widget-box">
        <div class="widget-header">
            <span class="widget-header-icon fa fa-th-list"></span>
            <h5>@Headers.City</h5>
        </div>
        <div class="widget-content">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group"> 
                    <div class="control-label col-xs-12 col-md-3 col-lg-2"> 
                        @Html.FormLabelFor(model => model.Id)
                    </div>
                    <div class="control-content col-xs-12 col-md-9 col-lg-5">
                        @Html.FormTextBoxFor(model => model.Id)
                    </div>
                    <div class="control-validation col-xs-12 col-lg-5"> 
                        @Html.ValidationMessageFor(model => model.Id)
                    </div>
                </div>
                <div class="form-group"> 
                    <div class="control-label col-xs-12 col-md-3 col-lg-2"> 
                        @Html.FormLabelFor(model => model.Name)
                    </div>
                    <div class="control-content col-xs-12 col-md-9 col-lg-5">
                        @Html.FormTextBoxFor(model => model.Name)
                    </div>
                    <div class="control-validation col-xs-12 col-lg-5"> 
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>
                <div class="form-group"> 
                    <div class="control-label col-xs-12 col-md-3 col-lg-2"> 
                        @Html.FormLabelFor(model => model.StateId)
                    </div>
                    <div class="control-content col-xs-12 col-md-9 col-lg-5">
                        @Html.DatalistFor(model => model.State.Country, new MvcDatalist<Country, CountryView>(Url))
                    </div>
                    <div class="control-validation col-xs-12 col-lg-5"> 
                        @Html.ValidationMessageFor(model => model.StateId)
                    </div>
                </div>
                <div class="form-group"> 
                    <div class="control-label col-xs-12 col-md-3 col-lg-2"> 
                        @Html.FormLabelFor(model => model.StateId)
                    </div>
                    <div class="control-content col-xs-12 col-md-9 col-lg-5">
                        @Html.DatalistFor(model => model.StateId, new MvcDatalist<State, StateView>(Url))
                    </div>
                    <div class="control-validation col-xs-12 col-lg-5"> 
                        @Html.ValidationMessageFor(model => model.StateId)
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-actions col-xs-12 col-lg-7">
                        <button type="submit" class="btn btn-primary">@Actions.Submit</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
